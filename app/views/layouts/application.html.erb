<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
<!-- START:stylesheet -->
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "depot", :media => "all" %>
<!-- END:stylesheet -->
  <%= javascript_include_tag :application %>
  <%= csrf_meta_tag %><!-- <label id="code.csrf"/> -->
</head>
<body id="store">
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || t('.title') %><!-- <label id="code.depot.e.title"/> -->
  </div>
  <div id="columns">
    <div id="side">
		<%if @cart%>
			<%= hidden_div_if(@cart.line_items.empty?, :id=>"cart") do %>
			<%= render @cart%>
			<%end%>
		<%end%>
	  <a href="http://www...."><%= t('.home')%></a><br />
      <a href="http://www..../faq"><%= t('.questions')%></a><br />
      <a href="http://www..../news"><%= t('.news')%></a><br />
      <a href="http://www..../contact"><%= t('.contact')%></a><br />
      <%if session[:user_id]%> </br>
      	<%= link_to t('.orders'), orders_path%> </br>
      	<%= link_to t('.products'), products_path %></br>
      	<%= link_to t('.users'), users_path %></br>
      	</br>
      	<%= button_to t('.logout'), logout_path, :method=>:delete%>
      <%end%>
	</div>
    <div id="main">
      <%= yield %><!-- <label id="code.depot.e.include"/> -->
    </div>
  </div>
</body>
</html>
